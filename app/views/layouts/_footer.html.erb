<footer id="colophon" class="site-footer default before-full-width-area" role="contentinfo">
  <div class="footer-area-wrap second-footer-area-wrap invert">
    <div class="container">
      <section id="second-footer-area" class="second-footer-area widget-area footer-area--4-cols row">
        <aside id="text-4" class="col-xs-12 col-sm-12 col-md-6 col-lg-3  widget footer-aside-index">
          <h5 class="widget-title">Giới thiệu</h5>
          <div class="textwidget company-about"><%= @company.about.html_safe %></div>
        </aside>

        <!-- Column tag -->
        <aside id="woocommerce_product_tag_cloud-4" class="col-xs-12 col-sm-12 col-md-6 col-lg-3  widget woocommerce widget_product_tag_cloud footer-aside-index">
          <h5 class="widget-title">Tags</h5>
          <div class="tagcloud">
            <% Tag.first(15).each_with_index do |t, index| %>
              <a href="<%= t.tag_url %>" class="tag-link-position-<%= index + 2 %>" title="" style="font-size: 19.666666666667pt;">
                <%= t.name %>
              </a>
            <% end %>
          </div>
        </aside>

        <!-- Contact info -->
        <aside id="tm_willard_contact_information_widget-1" class="col-xs-12 col-sm-12 col-md-6 col-lg-3  widget contact-information-widget footer-aside-index">
          <h5 class="widget-title">Liên hệ</h5>
          <ul class="contact-information-widget__inner">
            <li class="contact-information__item contact-information__item--icon">
              <span class="icon linearicon linearicon-telephone"></span>
              <div class="list-item">
                <p class="clearfix"><%= @company.contact_info %>: <%= @company.phone %></p>
              </div>
            </li>
            <li class="contact-information__item contact-information__item--icon">
              <span class="icon linearicon linearicon-clock3"></span>
              <%= @company.work_time %>
            </li>
            <li class="contact-information__item contact-information__item--icon">
              <span class="icon linearicon linearicon-envelope-open"></span>
              <%= @company.email %>
            </li>
            <li class="contact-information__item contact-information__item--icon">
              <span class="icon linearicon linearicon-home4"></span>
              <div class="list-item">
                <p class="clearfix">
                  Tại Hà Nội: <%= @company.hn_address %>
                </p>
                <p class="clearfix">
                  Tại Sài Gòn: <%= @company.sg_address %>
                </p>
              </div>
            </li>
          </ul>
        </aside>

        <aside id="text-5" class="col-xs-12 col-sm-12 col-md-6 col-lg-3 widget footer-aside-index">
          <h5 class="widget-title">Chỉ đường</h5>
          <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2075.897630917652!2d106.70190050289487!3d10.828679771053443!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528c4eaaf21bd%3A0x4c09b4b7864a7d3d!2zU3RlY2ggU8OgaSBHw7JuIC0gQ04gbWnhu4FuIE5hbSBDw7RuZyB0eSBW4bqtdCB0xrAga2hvYSBo4buNYyBRdeG7kWMgdOG6vw!5e0!3m2!1svi!2s!4v1559890348624!5m2!1svi!2s" width="450" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
        </aside>
      </section>
    </div>
  </div>
  <div class="footer-container invert">
    <div class="site-info container">
      <div class="site-info-wrap">
        <div class="site-info-logo_copyright">
          <div class="footer-logo">
            <%= link_to root_path, class: "site-logo__link", rel: "home" do %>
              <%= image_tag @company.logo, size: '184x45', title: @company.logo_title, alt: @company.logo_alt, class: "site-link__img" if @company.logo %>
            <% end %>
          </div>
          <div class="footer-copyright">Copyright © 2016 STECH INTERNATIONAL ., LTD <a class="privacy_link" href="">Privacy Policy</a></div>
        </div>
        <div class="social-list social-list--footer social-list--icon">
          <ul id="social-list-1" class="social-list__items inline-list">
            <li id="menu-item-44" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-44"><a href="http://youtube.com/"><span class="screen-reader-text">Youtube</span></a></li>
            <li id="menu-item-44" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-44"><a href="http://facebook.com/"><span class="screen-reader-text">Facebook</span></a></li>
            <li id="menu-item-45" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-45"><a href="http://twitter.com/"><span class="screen-reader-text">Twitter</span></a></li>
            <li id="menu-item-46" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-46"><a href="http://linkedin.com/"><span class="screen-reader-text">Linkedin</span></a></li>
            <li id="menu-item-47" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-47"><a href="http://instagram.com/"><span class="screen-reader-text">Instagram</span></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>
