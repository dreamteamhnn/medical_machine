<%= render "pages/list_categories", menu_detail: true %>
<div class="site-content_wrap container list-categories-mobile">
  <div id="product-order-placeholder"></div>
  <div id="order-result-placeholder"></div>
  <%= render "products/left_menu"%>
  <div id="primary" class="box-content">
    <%= render "layouts/breadcrumbs" %>
    <main id="main" class="site-main" role="main">
      <div id="woo-primary" class="content-area willard">
        <div id="woo-main" class="site-main" role="main">
          <div class="row row-mobile-custom">
            <ul class="list-category clearfix list-category-custom">
              <% @categories.each do |category| %>
                <% category.second.each_with_index do |sub_category, j| %>
                  <li class="col-md-3 col-xs-6 col-mobile-custom text-center">
                    <div class="td-sub-category">
                      <%= link_to category_products_path(sub_category.first), title: "#{sub_category.first.name}" do %>
                        <% img_url = sub_category.first.img.blank? ? "/preview_no_image.jpg" : sub_category.first.img.url %>
                        <%= image_tag img_url, class: "img-responsive img-sub-category" %>
                        <p class="sub-category-title">
                          <%= sub_category.first.name %>
                        </p>
                        <!-- <div class="text-center">
                          <div class="readmore">
                            Xem sản phẩm →
                          </div>
                        </div> -->
                      <% end %>
                    </div>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>

          <div class="col-xs-12 category-description-custom detail_cate">
            <%= @category&.description&.html_safe %>
          </div>
          <div class="btn-show btn-show-detail clear" data-attr="show">
              <p>
                  <i class="fa fa-long-arrow-down" aria-hidden="true"></i><span class="detail-button">Xem thêm</span><i class="fa fa-long-arrow-down" aria-hidden="true"></i>
              </p>
          </div>
        </div>
      </div>
    </main>
    <!-- #main -->
  </div>
    <!-- #primary -->
  <!-- .row -->
</div>
