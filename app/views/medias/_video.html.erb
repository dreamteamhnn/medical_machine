<table class="table table-bordered width-100-percent">
  <tbody>
    <% @medias.each_slice(3).to_a.each do |block| %>
      <tr>
        <% block.each do |video| %>
          <td class="click-video video-td-product video-td-product-<%= video.id %>">
            <iframe width="374" height="284" src="<%= video.video_url %>" frameborder="0" allowfullscreen></iframe>
            <div class="content-video">
              <strong><%= video.title %></strong><br/>
              <%= video.description %><br/>
              <p>Ngày tạo : <%= video.created_at.strftime("%m/%d/%Y") %></p>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="paginate-medias">
  <%= paginate @medias %>
  <%= page_entries_info @medias, entry_name: "video" %>
</div>
