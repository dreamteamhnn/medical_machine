<div id="jssor_1" class="container">
  <div data-u="slides" class="slides">
    <% @sliders.each do |slider| %>
      <div>
        <%= link_to "#{image_tag slider.url, height: 240, title: slider.title, alt: slider.alt}".html_safe, products_path() %>
      </div>
    <% end %>
  </div>

  <!-- Bullet Navigator -->
  <div data-u="navigator" class="jssorb051" data-autocenter="1" data-scale="0.5" data-scale-bottom="0.75">
    <div data-u="prototype" class="i">
      <svg viewBox="0 0 16000 16000" class="viewBox">
          <circle class="b" cx="8000" cy="8000" r="5800"></circle>
      </svg>
    </div>
  </div>
  <!-- Arrow Navigator -->
  <div data-u="arrowleft" class="jssora051 jssora051-left" data-autocenter="2" data-scale="0.75" data-scale-left="0.75">
      <svg viewBox="0 0 16000 16000" class="viewBox">
          <polyline class="a" points="11040,1920 4960,8000 11040,14080 "></polyline>
      </svg>
  </div>
  <div data-u="arrowright" class="jssora051 jssora051-right" data-autocenter="2" data-scale="0.75" data-scale-right="0.75">
      <svg viewBox="0 0 16000 16000" class="viewBox">
          <polyline class="a" points="4960,1920 11040,8000 4960,14080 "></polyline>
      </svg>
  </div>
</div>
