<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="brand-title">
        <p class="typical-product-brand">Chứng chỉ - Ủy quyền</p>
      </div>
    </div>
    <div class="col-sm-12">
      <div id="certificate" class="carousel slide certificate-class" data-ride="carousel">
        <% unless @is_mobile %>
          <div class="carousel-inner td-certificates">
            <% @certificates.each_with_index do |group, idx| %>
              <div class="item <%= 'active' if idx == 0 %>">
                <% group.each do |cert| %>
                  <% if cert.present? %>
                    <div class="col-sm-4">
                      <picture>
                        <source srcset="<%= cert.img_url(:cetificate_webp) %>.webp" type="image/webp">
                        <source srcset="<%= cert.img_url(:cetificate_thumb) %>" type="image/jpeg">
                        <img src="<%= cert.img_url(:cetificate_thumb) %>" class="lazy img-responsive certificate-img width-100-percent" data-cert="<%= cert.id %>">
                      </picture>
                      <div class="certificate-title iframe-video-image" data-video="<%= cert.id %>">
                        <p class="image-link"><%= cert&.title %></p>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="carousel-inner td-certificates-mobile">
            <% @certificates_mobile.each_with_index do |cert, idx| %>
              <div class="item <%= 'active' if idx == 0 %>">
                <% if cert.present? %>
                  <div class="col-xs-12">
                    <%= image_tag cert.img_url(:cetificate_thumb), class: "lazy img-responsive width-100-percent" %>
                    <div class="certificate-title iframe-video-image" data-video="<%= cert.id %>">
                      <p class="image-link"><%= cert&.title %></p>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>

        <a class="left carousel-control" href="#certificate" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
        <a class="right carousel-control" href="#certificate" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
      </div>
    </div>
  </div>

  <% unless @is_mobile %>
    <% @certificates.each_with_index do |group, idx| %>
      <div class="item <%= 'active' if idx == 0 %>">
        <% group.each do |cert| %>
          <% if cert.present? %>
            <!-- Modal HTML -->
            <div id="modal-video-<%= cert.id %>" class="modal modal-video fade">
              <div class="modal-dialog modal-custom">
                <div class="modal-content modal-video-content" style="height: 80%; margin-top: 0px;">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  </div>
                  <div class="modal-body">
                    <picture>
                      <source srcset="<%= cert.img_url(:cetificate_active_webp) %>.webp" type="image/webp">
                      <source srcset="<%= cert.img_url(:cetificate_active_thumb) %>" type="image/jpeg">
                      <img src="<%= cert.img_url(:cetificate_active_thumb) %>" class="lazy img-responsive height-100-percent">
                    </picture>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
