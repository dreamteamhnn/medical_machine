<div class="post-215 type-product status-publish has-post-thumbnail hentry product_shipping_class-class-3 has-thumb product">
  <%= link_to friendly_product_path(product) do %>
    <div class="block_product_inner">
      <div class="block_product_thumbnail clearfix">
        <div class="tm-thumbs-wrap <%= (product.img_1.present? && product.img_2.present?) ? 'effect-fade' : '' %>">
          <div class="tm-thumbs-wrap__inner product-image-box text-center">
            <% if @is_mobile %>
              <%= image_tag product.opt_src(product.img_1, 128), class: "lazy", size: "340x500", title: product.img_1_title, alt: product.img_1_alt if product.img_1.present? %>
              <%= image_tag product.opt_src(product.img_2, 128), class: "lazy", size: "340x500", title: product.img_2_title, alt: product.img_2_alt if product.img_2.present? %>
            <% else %>
              <%= image_tag product.opt_src(product.img_1, 223), class: "lazy", size: "340x500", title: product.img_1_title, alt: product.img_1_alt if product.img_1.present? %>
              <%= image_tag product.opt_src(product.img_2, 223), class: "lazy", size: "340x500", title: product.img_2_title, alt: product.img_2_alt if product.img_2.present? %>
            <% end %>

            <% if product.img_1.blank? && product.img_2.blank? %>
              <%= image_tag "223_223.jpg", alt: "Image size 233x223" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="block_product_content">
        <h3 class="block-product-title text-center">
          <span class="woocommerce-LoopProduct-link product_type_variable home-product-title" maxlength="15" title="<%= strip_tags(product.name) %>">
            <%= strip_tags(product.name) %>
          </span>
        </h3>
        <span class="price">
          <span class="woocs_price_code" data-product-id="215">
            <% if product.discount_price_currency.present? && product.price_currency.present? %>
              <span class="woocommerce-Price-amount amount"><%= product.discount_price_currency %> - <%= product.price_currency %>
                <span class="woocommerce-Price-currencySymbol">VNĐ</span>
              </span>
            <% elsif product.price_currency.present? %>
              <span class="woocommerce-Price-amount amount"><%= product.price_currency %>
                <span class="woocommerce-Price-currencySymbol">VNĐ</span>
              </span>
            <% else %>
              <span class="woocommerce-Price-amount amount">Yêu cầu báo giá</span>
            <% end %>
          </span>
        </span>

        <div class="price-add-to-cart-wrap">
          <span class="button product_type_variable add_to_cart_button add_to_cart_button-left-menu" maxlength="10"><%= product.model %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>
