<div class="post-215 type-product status-publish has-post-thumbnail hentry product_shipping_class-class-3 has-thumb product">
  <div class="block_product_inner">
    <div class="block_product_thumbnail clearfix">
      <a href="">
        <div class="tm-thumbs-wrap effect-fade">
          <div class="tm-thumbs-wrap__inner product-image-box">
            <% first = product.product_images.first %>
            <% second = product.product_images.second.url.present? ? product.product_images.second : first %>
            <%= link_to friendly_product_path(product), title: strip_tags(product.name) do %>
              <%= image_tag first.url, size: "340x500", title: first.title, alt: first.alt if first && first.url %>
              <%= image_tag second.url, size: "340x500", title: second.title, alt: second.alt if second && second.url%>
            <% end %>
          </div>
        </div>
      </a>
    </div>
    <div class="block_product_content">
      <h3 class="block-product-title">
        <%= link_to strip_tags(product.name), friendly_product_path(product), class: "woocommerce-LoopProduct-link product_type_variable", maxlength: 15, title: strip_tags(product.name) %>
      </h3>
      <span class="price">
        <span class="woocs_price_code" data-product-id="215">
          <% if product.price_currency.present? %>
            <span class="woocommerce-Price-amount amount"><%= product.price_currency %>
              <span class="woocommerce-Price-currencySymbol">VNĐ</span>
            </span>
          <% else %>
            <span class="woocommerce-Price-amount amount"><%= link_to 'Yêu cầu báo giá', friendly_product_path(product), class: "woocs_price_code", maxlength: 44, title: strip_tags(product.name) %></span>
          <% end %>
        </span>
      </span>

      <div class="price-add-to-cart-wrap">
        <a href="javascript:void(0)" class="button product_type_variable add_to_cart_button add_to_cart_button-left-menu" maxlength="10"><%= product.model %></a>
      </div>
    </div>
  </div>
</div>
