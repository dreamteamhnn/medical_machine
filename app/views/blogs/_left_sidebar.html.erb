<div id="sidebar" class="col-sm-2 sidebar widget-area sidebar categories-blog" role="complementary">
  <aside id="categories-5" class="widget widget_categories">
    <h5 class="widget-title">Danh mục</h5>
    <ul>
      <% @blog_categories.each do |category| %>
        <li class="cat-item <%= 'current-cat' if category.id == params[:blog_category_id].to_i %>">
          <%= link_to category.name, blog_list_category_path(category) %>
        </li>
      <% end %>
    </ul>
  </aside>
  <aside id="archives-4" class="widget widget_archive">
    <h5 class="widget-title">Tháng</h5>
    <label class="screen-reader-text" for="archives-dropdown-4">Archives</label>
    <select id="archives-dropdown-4">
      <option value="<%= blog_list_path() %>">Chọn tháng</option>
      <% @times.each do |time| %>
        <option value="<%= blog_list_path(time: time[:value]) %>" <%= 'selected' if params[:time] == time[:value] %>><%= time[:title] %></option>
      <% end %>
    </select>
  </aside>

