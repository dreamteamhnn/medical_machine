      </div>
    </main>
    <!-- #main -->
    <div id="view-more-blogs">
      <header class="entry-header">
        <h2 class="product_title entry-title product-h1-custom"><%= link_to "Xem thêm", blogs_url() %></h2>
      </header>
      <div class="entry-content">
        <ul>
          <% @more_blogs.each_with_index do |blog, idx| %>
            <li>
              <%= link_to blog.title, blog_detail_path(blog) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div id="suggestion-blogs" class="blogs-custom blogs-custom-new box-content-custom home-blog-part">
      <!-- box Tin tức khác -->
      <div class="col-xs-12 blog-title">
        <div class="typical-products-title brand-title">
          <p class="typical-product-brand"><%= link_to "Có thể bạn quan tâm", blogs_url() %></p>
        </div>
      </div>
      <div class="tm-posts_listing">
        <div class="row">
          <div class="col-xs-12 blog-list">
            <% @suggestion_blogs.each do |blog| %>
              <div class="col-sm-3">
                <div class="thumbnail">
                  <div class="blog-image">
                    <%= link_to blog_detail_path(blog) do %>
                      <% if blog.feature_image_thumb_url.present? %>
                        <%= image_tag blog.feature_image_thumb_url, alt: blog.feature_image_alt, title: blog.feature_image_title %>
                      <% else %>
                        <%= image_tag "480_270.jpg", alt: "Image size 480x270" %>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="caption">
                    <h3 class="blog-product-title"><%= link_to blog.title, blog_detail_path(blog) %></h3>
                    <div class="tm-posts_item_meta entry-meta pull-right">
                      <a class="text-right text-sm"><small><%= blog.created_at.strftime(Settings.format.created_at) %></small></a>
                    </div>
                    <div class="clearfix"></div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- end -->
    </div>
