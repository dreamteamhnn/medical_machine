<%= render "layouts/breadcrumbs" %>
<%= render "left_sidebar", menu_detail: false %>
<div class="site-content_wrap container">
  <div id="primary" class="box-content col-md-12 margin-custom">
    <main id="main" class="site-main blogs-custom" role="main">
      <div class="box-content-custom">
        <article id="post-73" class="post-73 post type-post status-publish format-standard has-post-thumbnail hentry category-accessories category-diy-home category-tips tag-drill tag-hammer tag-hand-tools tag-power-tools has-thumb">
          <header class="entry-header">
            <span class="post-cats">
              <% @blog.blog_categories.uniq.each do |category| %>
                <%= link_to category.name, blog_list_path(blog_category_id: category.id) %>
              <% end %>
            </span>
            <h1 class="product_title entry-title product-h1-custom"><%= @blog.title %></h1>
            <div class="entry-meta">
              <span class="post__date">
                <a href="" class="post__date-link">
                  <time datetime="2017-02-01T17:07:27+00:00"><%= @blog.created_at.strftime(Settings.format.created_at) %></time>
                </a></span>
            </div>
          </header>

          <figure class="post-thumbnail">
            <%= image_tag @blog.blog_images.first.url.url, alt: @blog.blog_images.first.alt, title: @blog.blog_images.first.title, class: "post-thumbnail__img wp-post-image" if @blog.blog_images.first %>
          </figure>

          <div class="entry-content">
            <div class="woocommerce-Tabs-panel woocommerce-Tabs-panel--description panel entry-content wc-tab tab-pane active custom-white-space">
              <p><%= @blog.content&.html_safe %></p>
            </div>
          </div>
          <!-- .entry-content -->
          <footer class="entry-footer">
            <div class="entry-meta entry-meta-right">
              <span class="post__tags">
                <% @blog.tags.uniq.each do |tag|%>
                  <%= link_to tag.name, blog_list_path(tag_id: tag.id) %>
                  <% unless tag == @blog.tags.last %>
                    ,
                  <% end %>
                <% end %>
            </div>
          </footer>
          <!-- .entry-footer -->
        </article>
        <nav class="navigation post-navigation" role="navigation">
          <h2 class="screen-reader-text">Post navigation</h2>
          <div class="nav-links">
            <% if @blog_relate_1.present? %>
              <div class="nav-previous">
                <%= link_to @blog_relate_1.title, blog_detail_path(@blog_relate_1) %>
              </div>
            <% end %>
            <% if @blog_relate_2.present? %>
              <div class="nav-next">
                <%= link_to @blog_relate_2.title, blog_detail_path(@blog_relate_2) %>
              </div>
            <% end %>
          </div>
        </nav>
      </div>
    </main>
    <!-- #main -->
  </div>
</div>
