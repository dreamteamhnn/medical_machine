<div class="site-content_wrap container">
  <div id="primary" class="box-content col-md-12 margin-custom blog-detail-new">
    <%= render "layouts/breadcrumbs" %>
    <main id="main" class="site-main blogs-custom blog-detail-custom" role="main">
      <div class="box-content-custom">
        <article id="post-73" class="post-73 post type-post status-publish format-standard has-post-thumbnail hentry category-accessories category-diy-home category-tips tag-drill tag-hammer tag-hand-tools tag-power-tools has-thumb">
          <header class="entry-header">
            <h1 class="product_title entry-title product-h1-custom"><%= @blog.title %></h1>
            <div class="entry-meta">
              <span class="post__date">
                <a href="" class="post__date-link">
                  <time datetime="2017-02-01T17:07:27+00:00"><%= @blog.created_at.strftime(Settings.format.created_at) %></time>
                </a></span>
            </div>
          </header>

          <figure class="post-thumbnail">
            <%= image_tag @blog.blog_images.first.url.url, alt: @blog.blog_images.first.alt, title: @blog.blog_images.first.title, class: "post-thumbnail__img wp-post-image" if @blog.blog_images.first %>
          </figure>

          <div class="entry-content">
            <div class="woocommerce-Tabs-panel woocommerce-Tabs-panel--description panel entry-content wc-tab tab-pane active custom-white-space">
              <p><%= @blog.content&.html_safe %></p>
            </div>
          </div>
          <!-- .entry-content -->
