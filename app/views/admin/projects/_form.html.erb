<div class="row" id="project-new">
  <div class="col-lg-12">
    <div class="panel-body">
      <div class="form-company">
        <div class="form-group">
          <%= render "shared/flash" %>
        </div>
        <%= form_for([:admin, @project]) do |f| %>
          <div class="row show-grid" style="padding: 10px;border: lightgray solid 1px;">
            <div class="form-group col-md-4">
              <strong>Ảnh</strong> </br>
              <div class="preview-project-image-div">
                <% if @project.img %>
                  <%= image_tag @project.img.url, height: 100, class: "preview-project-image" %>
                <% else %>
                  <img src="/preview_no_image.jpg" height="150" class="preview-project-image">
                <% end %>
              </div>
              <label for="upload-project-image" class="btn btn-success" style="margin-top: 10px">Chọn ảnh (1200x628)</label>
              <%= f.file_field :img, id: "upload-project-image", class: "hidden" %>
            </div>

            <div class="form-group col-md-4">
              <div class="form-group">
                <strong>Caption</strong> </br>
                <%= f.text_field :img_title, class: "form-control" %>
              </div>
              <div class="form-group">
                <strong>Description</strong> </br>
                <%= f.text_field :img_desc, class: "form-control" %>
              </div>
            </div>

            <div class="form-group col-md-4">
              <div class="form-group">
                <strong>Alt</strong> </br>
                <%= f.text_field :img_alt, class: "form-control" %>
              </div>
              <div class="form-group">
                <strong>Caption</strong> </br>
                <%= f.text_field :img_caption, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row show-grid" style="padding: 10px;border: lightgray solid 1px;">
            <div class="form-group col-md-8">
              <strong>Tiêu đề (Tối đa 255 ký tự)</strong> </br>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group col-md-4">
              <strong>Thứ tự</strong> </br>
              <%= f.number_field :order, class: "form-control" %>
            </div>
          </div>

          <div class="row show-grid" style="padding: 10px;border: lightgray solid 1px;">
            <div class="form-group col-md-12">
              <strong>Link bài viết</strong> </br>
              <%= f.text_field :link, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <strong>Nội dung</strong> </br>
            <%= f.cktext_area :content, ckeditor: {toolbar: 'mini'}, class: "form-control" %>
          </div>

          <div class="form-group btn-align-center">
            <%= f.submit title, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>