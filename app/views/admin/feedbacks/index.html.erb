<div id="page-wrapper">
	<div class="row">
	  <div class="col-lg-12">
	    <h1 class="page-header">Phản hồi</h1>
	  </div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<%= link_to "Tạo mới", new_admin_feedback_path(), class: "btn btn-success" %>
		</div>
	</div>

	<%= render "shared/flash" %>
	<br>
	<div class="row" id="custom--table">
		<div class="col-lg-12">
		  <div class="table-responsive">
		    <table class="table table-striped table-bordered table-hover"  >
		      <thead>
		        <tr>
		          <th>TT</th>
		          <th>Tên</th>
		          <th>Mô tả ngắn</th>
		          <th class="center"></th>
		        </tr>
		      </thead>
		      <% page = params[:page] || 1 %>
		      <tbody>
		        <% @feedbacks.each_with_index do |feedback, index| %>
		          <tr class="odd gradeX" id="feedback<%= feedback.id %>">
		            <td>
		              <%= (page.to_i - 1)*(params[:limit].to_i) + index + 1 %>
		            </td>
		            <td>
		              <%= feedback.try(:name).html_safe %>
		            </td>
		            <td>
		              <%= feedback.try(:type).try(:html_safe) %>
		            </td>
		            <td class="center">
		              <%= link_to "Sửa", edit_admin_feedback_path(feedback), class: "btn btn-primary", style:"width: 100px; margin-bottom: 5px;" %>
		              <%= link_to 'Xoá', admin_feedback_path(feedback), class: "btn btn-danger", :confirm => 'Bạn có chắc chắn xoá Phản hồi?', :method => :delete %>
		            </td>
		          </tr>
		        <% end %>
		      </tbody>
		    </table>
		    <%= paginate @feedbacks, theme: 'twitter-bootstrap-3' %>
		  </div>
		</div>
	</div>
</div>