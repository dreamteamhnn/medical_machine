<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Chỉnh sửa thông tin công ty</h1>
    </div>
  </div>
  <div class="row" id="company-show">
    <div class="col-lg-12">
      <div class="panel-body">
        <div class="form-company">
          <div class="form-group">
            <%= render "shared/flash" %>
          </div>
          <%= form_for([:admin, @company], html: {multipart: true}) do |f| %>
            <div class="form-group">
              <strong>Logo</strong> </br>
              <div class="preview-company-image-div">
                <% if @company.logo %>
                  <%= image_tag @company.logo, height: 100, class: "preview-company-image" %>
                <% else %>
                  <img src="/preview_no_image.jpg" height="100" class="preview-company-image">
                <% end %>
              </div>
              <label for="upload-company-image" class="btn btn-success">Chọn ảnh</label>
              <%= f.file_field :logo, id: "upload-company-image", class: "hidden" %>
            </div>
            <div class="form-group">
              <strong>Tiêu đề logo</strong> </br>
              <%= f.text_field :logo_title, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Alt logo</strong> </br>
              <%= f.text_field :logo_alt, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Tên công ty</strong> </br>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Mô tả</strong> </br>
              <%= f.cktext_area :about, ckeditor: {toolbar: 'mini'}, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Địa chỉ Hà Nội</strong> </br>
              <%= f.text_area :hn_address, class: "form-control" %>
            </div>
            <div class="form-group">
              <div class="col-xs-6">
                <strong>Vĩ độ (Latitude)</strong></br>
                <%= f.number_field :hn_map_lat, class: "form-control", step: :any %>
              </div>
              <div class="col-xs-6">
                <strong>Kinh độ (Longtide)</strong></br>
                <%= f.number_field :hn_map_lng, class: "form-control", step: :any %>
              </div>
              </br>
            </div><br>
            <div class="form-group">
              <strong>Địa chỉ Sài Gòn</strong> </br>
              <%= f.text_area :sg_address, class: "form-control" %>
            </div>
            <div class="form-group">
              <div class="col-xs-6">
                <strong>Vĩ độ (Latitude)</strong></br>
                <%= f.number_field :sg_map_lat, class: "form-control", step: :any %>
              </div>
              <div class="col-xs-6">
                <strong>Kinh độ (Longtide)</strong></br>
                <%= f.number_field :sg_map_lng, class: "form-control", step: :any %>
              </div>
              </br>
            </div><br> 
            <div class="form-group">
              <strong>Số điện thoại</strong> </br>
              <%= f.text_field :phone, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Người đại diện</strong> </br>
              <%= f.text_field :contact_info, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Tên người liên hệ</strong> </br>
              <%= f.text_field :contact_name, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Giờ làm việc</strong> </br>
              <%= f.text_field :work_time, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Email</strong> </br>
              <%= f.text_field :email, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Facebook</strong> </br>
              <%= f.text_field :facebook, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Instagram</strong> </br>
              <%= f.text_field :instagram, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Website</strong> </br>
              <%= f.text_field :website, class: "form-control" %>
            </div>

            <div class="form-group btn-align-center">
              <%= f.submit "Cập nhật", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
