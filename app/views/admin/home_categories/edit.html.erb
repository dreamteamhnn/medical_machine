<div id="page-wrapper">
	<div class="row">
	  <div class="col-lg-12">
	    <h1 class="page-header">Danh mục trên trang chủ</h1>
	  </div>
	</div>
	<div class="row table-responsive" id="home-category">
		<table class="table borderless">
		    <tbody>
		      <tr>
		        <td>Home top</td>
		        <td>
		        	<select id="home-top-select" class="selectpicker" multiple title="Chọn danh mục" data-live-search="true" data-max-options="<%= Settings.limit.home_block_category %>">
		        		<% @all_categories.each do |group| %>
		        			<optgroup label="<%= group.second.first.name %>">
		        				<% group.first.each do |item| %>
		        					<option value="<%= item.id %>" <%= @home_top.include?(item) ? 'selected' : '' %>><%= item.name %></option>
		        				<% end %>
		        			</optgroup>
		        		<% end %>
		        	</select>
		        </td>
		      </tr>
		      <tr>
		        <td>Home bottom</td>
		        <td>
		        	<select id="home-bottom-select" class="selectpicker" multiple title="Chọn danh mục" data-live-search="true" data-max-options="<%= Settings.limit.home_block_category %>">
		        		<% @all_categories.each do |group| %>
		        			<optgroup label="<%= group.second.first.name %>">
		        				<% group.first.each do |item| %>
		        					<option value="<%= item.id %>" <%= @home_bottom.include?(item) ? 'selected' : '' %>><%= item.name %></option>
		        				<% end %>
		        			</optgroup>
		        		<% end %>
		        	</select>
		        </td>
		      </tr>
		    </tbody>
		</table>
	</div>
	<%= form_for @home_category, url: admin_home_category_path(id: 1), html: {id: 'home-categories'} do |f| %>
		<input type="hidden" name="home_top" id="home-top">
		<input type="hidden" name="home_bottom" id="home-bottom" >
    <% end %>
	<div class="row" style="text-align: center;">
		<button id="save-home-category-btn" type="button" class="btn btn-success" style="width: 20%">Lưu thay đổi</button>
	</div>
</div>
