<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Catalog</h1>
    </div>
  </div>
  <div class="row" id="catalog-table">
    <div class="col-lg-12">
      <div class="create-div">
        <%= link_to "Tạo mới", new_admin_catalog_path(), class: "btn btn-success" %>
      </div>
      <%= render "shared/flash" %>
      <div class="panel-body table-responsive">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-catalog">
          <thead>
            <tr>
              <th>STT</th>
              <th>Ảnh</th>
              <th>Tiêu đề</th>
              <th>Desc</th>
              <th>Caption</th>
              <th>Alt</th>
              <th>Link</th>
              <th class="center"></th>
              <th class="center"></th>
            </tr>
          </thead>
          <tbody>
            <% @catalogs.each do |catalog| %>
              <tr class="odd gradeX" id="catalog<%= catalog.id %>">
                <td>
                  <p><%= catalog.home_order %></p>
                </td>
                <td>
                  <%= image_tag catalog.url.url, height: 100 %>
                </td>
                <td>
                  <p><%= catalog.title %></p>
                </td>
                <td>
                  <p><%= catalog.desc %></p>
                </td>
                <td>
                  <p><%= catalog.caption %></p>
                </td>
                <td>
                  <p><%= catalog.alt %></p>
                </td>
                <td>
                  <p><%= catalog.link %></p>
                </td>
                <td class="center">
                  <%= link_to "Sửa", edit_admin_catalog_path(catalog), class: "btn btn-primary" %>
                </td>
                <td class="center">
                  <p data-placement="top" data-toggle="tooltip" title="Xóa">
                    <button class="btn btn-danger button-delete-catalog" data-title="Xóa" data-toggle="modal" data-target="#delete-catalog" id="delete-catalog<%= catalog.id %>" >
                      Xóa
                    </button>
                  </p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="modal fade" id="delete-catalog" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
    <input type="hidden" class="delete-catalog-id" value="Norway">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <a href="#" class="close" data-dismiss="modal" aria-label="close">&times;</a>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          <h4 class="modal-title custom_align" id="Heading">Xóa catalog</h4>
        </div>
        <div class="modal-body">
          <div class="alert alert-danger">Bạn có chắc chắn xóa catalog <strong class="delete-catalog-name"></strong> không?</div>
        </div>
        <div class="modal-footer ">
          <button type="button" class="btn btn-success" id="button-delete-catalog-confirm" >Có</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
  </div>
</div>
