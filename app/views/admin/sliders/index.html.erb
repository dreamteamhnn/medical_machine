<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Slider</h1>
    </div>
  </div>
  <div class="row" id="slider-table">
    <div class="col-lg-12">
      <div class="create-div">
        <%= link_to "Tạo mới", new_admin_slider_path(), class: "btn btn-success" %>
      </div>
      <%= render "shared/flash" %>
      <div class="panel-body table-responsive">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-slider">
          <thead>
            <tr>
              <th>STT</th>
              <th>Ảnh</th>
              <th>Tiêu đề</th>
              <th>Desc</th>
              <th>Caption</th>
              <th>Alt</th>
              <th>Link</th>
              <th class="center"></th>
              <th class="center"></th>
            </tr>
          </thead>
          <tbody>
            <% @sliders.each do |slider| %>
              <tr class="odd gradeX" id="slider<%= slider.id %>">
                <td>
                  <p><%= slider.home_order %></p>
                </td>
                <td>
                  <%= image_tag slider.url, height: 100 %>
                </td>
                <td>
                  <p><%= slider.title %></p>
                </td>
                <td>
                  <p><%= slider.desc %></p>
                </td>
                <td>
                  <p><%= slider.caption %></p>
                </td>
                <td>
                  <p><%= slider.alt %></p>
                </td>
                <td>
                  <p><%= slider.link %></p>
                </td>
                <td class="center">
                  <%= link_to "Sửa", edit_admin_slider_path(slider), class: "btn btn-primary" %>
                </td>
                <td class="center">
                  <p data-placement="top" data-toggle="tooltip" title="Xóa">
                    <button class="btn btn-danger button-delete-slider" data-title="Xóa" data-toggle="modal" data-target="#delete-slider" id="delete-slider<%= slider.id %>" >
                      Xóa
                    </button>
                  </p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="modal fade" id="delete-slider" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
    <input type="hidden" class="delete-slider-id" value="Norway">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <a href="#" class="close" data-dismiss="modal" aria-label="close">&times;</a>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          <h4 class="modal-title custom_align" id="Heading">Xóa slider</h4>
        </div>
        <div class="modal-body">
          <div class="alert alert-danger">Bạn có chắc chắn xóa slider <strong class="delete-slider-name"></strong> không?</div>
        </div>
        <div class="modal-footer ">
          <button type="button" class="btn btn-success" id="button-delete-slider-confirm" >Có</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
  </div>
</div>
