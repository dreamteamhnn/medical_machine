<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Chứng chỉ - ủy quyền</h1>
    </div>
  </div>
  <div class="row" id="certificate-table">
    <div class="col-lg-12">
      <div class="create-div">
        <%= link_to "Tạo mới", new_admin_certificate_path(), class: "btn btn-success" %>
      </div>
      <%= render "shared/flash" %>
      <div class="panel-body table-responsive">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-certificate">
          <thead>
            <tr>
              <th>STT</th>
              <th>Ảnh</th>
              <th>Tiêu đề</th>
              <th class="center"></th>
            </tr>
          </thead>
          <tbody>
            <% @certificates.each do |certificate| %>
              <tr class="odd gradeX" id="certificate<%= certificate.id %>">
                <td style="width: 30px !important">
                  <p><%= certificate.order %></p>
                </td>
                <td style="width: 100px !important">
                  <%= image_tag certificate.img.url, height: 100 %>
                </td>
                <td>
                  <p><%= certificate.title %></p>
                </td>
                <td class="center" style="width: 150px !important">
                  <%= link_to "Sửa", edit_admin_certificate_path(certificate), class: "btn btn-primary" %>
                  <button class="btn btn-danger button-delete-certificate" data-title="Xóa" data-toggle="modal" data-target="#delete-certificate" id="delete-certificate<%= certificate.id %>" >
                    Xóa
                  </button>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="modal fade" id="delete-certificate" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
    <input type="hidden" class="delete-certificate-id" value="Norway">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <a href="#" class="close" data-dismiss="modal" aria-label="close">&times;</a>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          <h4 class="modal-title custom_align" id="Heading">Xóa chứng chỉ - ủy quyền</h4>
        </div>
        <div class="modal-body">
          <div class="alert alert-danger">Bạn có chắc chắn xóa chứng chỉ - ủy quyền <strong class="delete-certificate-name"></strong> không?</div>
        </div>
        <div class="modal-footer ">
          <button type="button" class="btn btn-success" id="button-delete-certificate-confirm" >Có</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>
        </div>
      </div>
    </div>
  </div>
</div>
