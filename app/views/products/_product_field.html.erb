<div class="post-215 type-product status-publish has-post-thumbnail hentry product_shipping_class-class-2 has-thumb col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-3 col-xxl-3 product">
  <div class="block_product_inner">
    <div class="block_product_thumbnail">
      <a href="">
        <div class="tm-thumbs-wrap effect-fade">
          <div class="tm-thumbs-wrap__inner">
            <%= link_to friendly_product_path(product), title: strip_tags(product.name) do %>
              <%= image_tag product.product_images.first.url, size: '340', title: product.product_images.first.title, alt: product.product_images.first.alt if product.product_images.first.try(:url)%>
              <%= image_tag product.product_images.second.url, size: '340', title: product.product_images.second.title, alt: product.product_images.second.alt if product.product_images.second.try(:url)%>
            <% end %>
          </div>
        </div>
      </a>
    </div>
    <div class="block_product_content">
      <h3>
        <%= link_to strip_tags(product.name), friendly_product_path(product), class: "woocommerce-LoopProduct-link", maxlength: 44, title: strip_tags(product.name) %>
      </h3>
      <span class="price">
        <span class="woocs_price_code" data-product-id="215">
          <% if product.price_currency.present? %>
            <span class="woocommerce-Price-amount amount"><%= product.price_currency %>
              <span class="woocommerce-Price-currencySymbol">VNĐ</span>
            </span>
          <% else %>
            <span class="woocommerce-Price-amount amount">Liên hệ</span>
          <% end %>
        </span>
      </span>

      <div class="price-add-to-cart-wrap">
        <a href="javascript:void(0)" class="button product_type_variable add_to_cart_button add_to_cart_button-left-menu" maxlength="10"><%= product.model %></a>
      </div>
    </div>
  </div>
</div>
