<div data-sidebar="shop-sidebar">
  <aside id="tm_willard_products-4" class="widget woocommerce tm_willard_widget_products">
    <h2 class="widget-title title-font-em">Sản phẩm mới</h2>
    <ul class="product_list_widget">
      <% @new_products.each do |product| %>
        <li>
          <%= link_to friendly_product_path(product), title: strip_tags(product.name) do %>
            <%= image_tag product.img_1, size: '210', title: product.img_1_title, alt: product.img_1_alt if product.img_1%>
          <% end %>
          <!-- <div class="product-widget-categories">
            <a href="" rel="tag">Cutters</a>,
            <a href="" rel="tag">Drills</a>,
            <a href="" rel="tag">Gardenign Tools</a>
          </div> -->
          <div class="product-widget-categories">
            <% product.categories.each do |category| %>
              <%= link_to "#{category.name} ", product_category_path(category), rel: "tag" %>
            <% end %>
          </div>
          <span class="product-title">
            <%= link_to strip_tags(product.name), friendly_product_path(product), title: strip_tags(product.name), class: "product-title-custom" %>
          </span>
          <span class="woocs_price_code" data-product-id="274">
            <% if product.discount_price_currency.present? %>
              <del>
                <span class="woocommerce-Price-amount amount"><%= product.price_currency %>
                  <span class="woocommerce-Price-currencySymbol">VNĐ</span>
                </span>
              </del>
              <ins>
                <span class="woocommerce-Price-amount amount"><%= product.discount_price_currency %>
                  <span class="woocommerce-Price-currencySymbol">VNĐ</span>
                </span>
              </ins>
            <% else %>
              <span class="woocommerce-Price-amount amount"><%= product.price_currency %>
                <span class="woocommerce-Price-currencySymbol">VNĐ</span>
              </span>
            <% end %>
          </span>
          <div class="price-add-to-cart-wrap">
            <%= link_to truncate(product&.model.to_s, length: 12, separator: ' ', omission: ''), 'javascript:void(0)', rel: "nofollow",
              class: "button product_type_variable add_to_cart_button add_to_cart_button-left-menu" %>
          </div>
        </li>
      <% end %>
    </ul>
  </aside>
</div>
